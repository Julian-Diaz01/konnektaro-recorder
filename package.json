{
  "name": "@konnektaro/speech-to-text",
  "version": "1.1.5",
  "description": "A React component library for speech-to-text conversion with dual-mode support (API mode + native browser Speech Recognition)",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "speech-to-text",
    "speech",
    "transcription",
    "microphone",
    "webrtc",
    "typescript",
    "speech-recognition",
    "audio-recording",
    "voice-to-text",
    "browser-speech-api"
  ],
  "author": "Konnektaro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julian-Diaz01/konnektaro-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/Julian-Diaz01/konnektaro-recorder/issues"
  },
  "homepage": "https://github.com/Julian-Diaz01/konnektaro-recorder#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^24.4.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  }
